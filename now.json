{
  "version": 2,
  "name": "react-redux-app",
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": { "distDir": "build" },
      "env": {
        "REACT_APP_API_HOST": "https://jsonplaceholder.typicode.com",
        "REACT_APP_PHOTO_API": "https://picsum.photos/id"
      }
    }
  ],
  "routes": [
    { "src": "^/static/(.*)", "dest": "/static/$1" },
    { "src": "^/favicon.ico", "dest": "/favicon.ico" },
    { "src": "^/manifest.json", "dest": "/manifest.json" },
    { "src": "^/(.*)", "dest": "/index.html" }
  ]
}
